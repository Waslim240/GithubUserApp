<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextComponent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextComponent.List">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="TextComponent.Details">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="TextComponent.TextName">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/cyan_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonShare">
        <item name="android:backgroundTint">@color/cyan_700</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/share</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>